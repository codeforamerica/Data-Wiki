; Theme basics
name = CityGroups Seattle, Blockwatch
description = A custom subtheme of Datawiki/CityGroups for a Collection of Blockwatches.
base theme = citygroups_sea
core = 7.x
engine = phptemplate

; Styles
; 960 grid system (50 column 16 columns 10 gutter )
stylesheets[all][] = css/960_50_16_10.css
; Classes that override drupal core and module css
stylesheets[all][] = css/drupal_reset.css
; Custom site styles - backgrounds, etc. Can be merged with layout as it makes sense.
stylesheets[all][] = css/style.css
; Changes to admin interface.
stylesheets[all][] = css/admin.css
; Changes to the logged in content editor experience (forms etc)
stylesheets[all][] = css/edit.css


; Scripts
scripts[] = js/script.js

